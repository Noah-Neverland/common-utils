{
  "compilerOptions": {
    "outDir": "dist",
    "types": ["node"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "types/**/*.d.ts",
    "types/**/*.ts"
  ],
  "exclude": ["src/**/*.test.tsx", "src/**/*.stories.tsx"]
}
